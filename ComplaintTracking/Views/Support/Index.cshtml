@using ComplaintTracking.App
@{
    ViewData["Title"] = "CTS Support";
    var accountMailto = $"mailto:{ApplicationSettings.ContactEmails.AccountAdmin}?subject=CTS Account";
    var supportMailto = $"mailto:{ApplicationSettings.ContactEmails.Support}?subject=CTS Support Request";

    var v = System.Reflection.Assembly.GetEntryAssembly()?.GetName().Version;
    var ctsVersion = v is null ? string.Empty : new Version(v.Major, v.Minor, v.Build).ToString();
}

<h1>Support</h1>
<ul>
    <li>
        <a href="~/static/Complaint-Tracking-System-Instructions.pdf" target="_blank">General Instructions (<abbr>PDF</abbr>)</a>
    </li>
    <li>
        <a href="~/static/Complaint-Attachments-Policy.pdf" target="_blank">Complaint Attachments Policy (<abbr>PDF</abbr>)</a>
    </li>
    <li>For account management requests, contact <a href="@accountMailto">@ApplicationSettings.ContactEmails.AccountAdmin</a></li>
    <li>For technical support, contact <a href="@supportMailto">@ApplicationSettings.ContactEmails.Support</a></li>
</ul>

<p>
    Copyright © 2017 – @DateTime.Now.Year State of Georgia.<br />
    The CTS was developed by Georgia EPD-IT.<br />
    @if (ctsVersion != "")
    {
        <text>Current version: <em>@ctsVersion</em>.</text>
    }
</p>

