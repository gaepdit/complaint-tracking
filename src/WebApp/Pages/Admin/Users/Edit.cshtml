@page "{id:Guid?}"
@using Cts.WebApp.Pages.Shared.EditorTemplates
@model EditModel
@{
    ViewData["Title"] = "Edit User Profile";
    ViewData["NoAnchors"] = "True";
}

<h1>@ViewData["Title"]</h1>
<hr />

<h2>@Model.DisplayStaff.Name</h2>

<div class="p-3 border rounded-3 bg-light-subtle mb-3">
    <form method="post">
        <div asp-validation-summary="All" class="alert alert-danger" role="alert">
            User update failed:
        </div>
        <div class="row">
            <div class="col-lg mb-3">
                @Html.EditorFor(e => e.DisplayStaff.Email, EditorTemplate.InputDisabled)
            </div>
            <div class="col-md mb-3">
                @Html.EditorFor(e => e.Item.Phone, EditorTemplate.Input)
            </div>
            <div class="col-md mb-3">
                @Html.EditorFor(e => e.Item.OfficeId, EditorTemplate.Select, new { Items = Model.OfficesSelectList })
            </div>
        </div>
        <div class="mb-3">
            @Html.EditorFor(e => e.Item.Active, EditorTemplate.Checkbox)
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary col-sm-3 me-2">Update Info</button>
            <a asp-page="Details" asp-route-id="@Model.Item.Id" class="btn btn-outline-secondary col-md-2">Cancel</a>
        </div>
        <div class="text-danger-emphasis mt-3">* denotes a required field</div>
        <input asp-for="Item.Id" type="hidden" />
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
