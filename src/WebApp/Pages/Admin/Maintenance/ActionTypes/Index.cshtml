@page
@model IndexModel
@{
    ViewData["Title"] = $"Site Maintenance: {IndexModel.ThisOption.PluralName}";
}

<p>
    <a asp-page="../Index">← Site Maintenance</a>
</p>

<partial name="_AlertPartial" for="Message" />

<h1>
    @IndexModel.ThisOption.PluralName
</h1>

<p class="lead">The @IndexModel.ThisOption.PluralName listed below are available for selection when adding or editing Complaint Actions.</p>
<p>
    <a asp-page="Create" class="btn btn-outline-primary btn-sm">Create New</a>
</p>
<p>
    The "Site Maintenance" role is needed to create or edit @IndexModel.ThisOption.PluralName. Select an action type to
    edit it. Setting an item as "inactive" makes it unavailable for use in future Complaint Actions but does not affect
    any existing Actions.
</p>

@if (Model.Items.Count == 0)
{
    <em class="text-muted">None</em>
}
else
{
    <table class="table">
        <thead>
        <th scope="col">Name</th>
        <th scope="col">Active</th>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr class="@(item.Id == Model.HighlightId ? "list-group-item-warning" : !item.Active ? "bg-secondary bg-opacity-25" : "")">
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id">
                        @Html.DisplayFor(m => item.Name, "StringOrNone")
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(m => item.Active)
                </td>
            </tr>
        }
        </tbody>
    </table>
}
