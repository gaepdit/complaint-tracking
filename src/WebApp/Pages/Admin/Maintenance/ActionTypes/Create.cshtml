@page
@model Create
@{
    ViewData["Title"] = $"Add a new {Create.ThisOption.SingularName}";
}

<h1>@ViewData["Title"]</h1>

<div class="container bg-light py-3">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <div class="row">
            <div class="col-md-10 mb-3">
                <label asp-for="Item.Name" class="form-label">@Create.ThisOption.SingularName Name <span class="text-danger">*</span></label>
                <input asp-for="Item.Name" class="form-control" />
                <span asp-validation-for="Item.Name" class="text-danger"></span>
            </div>
        </div>
        <p class="text-danger">* denotes a required field</p>
        <div class="mt-3 mb-1">
            <button id="SubmitButton" type="submit" class="btn btn-primary col-md-5">Add New @Create.ThisOption.SingularName</button>
            <a asp-page="Index" class="btn btn-outline-secondary col-md-2">Cancel</a>
        </div>
    </form>
</div>

