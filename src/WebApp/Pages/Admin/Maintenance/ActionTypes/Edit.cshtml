@page "{id:Guid?}"
@model Edit

@{
    ViewData["Title"] = $"Edit {Edit.ThisOption.SingularName}: {Model.OriginalName}";
}

<h1>
    Edit @Edit.ThisOption.SingularName: <br>
    <small class="text-muted">@Model.OriginalName</small>
</h1>

<div class="p-3 border rounded-3 bg-light">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <div class="mb-3">
            <div class="form-floating">
                <input asp-for="Item.Name" class="form-control" />
                <label asp-for="Item.Name" class="form-label"></label>
                <span asp-validation-for="Item.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <input asp-for="Item.Active" class="form-check-input" />
            <label asp-for="Item.Active" class="form-check-label"></label>
        </div>
        <p class="text-danger">* denotes a required field</p>
        <div class="mt-3 mb-1">
            <input asp-for="Item.Id" type="hidden" /><input asp-for="OriginalName" />
            <button type="submit" class="btn btn-primary col-sm-3">Save Changes</button>
            <a asp-page="Index" class="btn btn-outline-secondary col-md-2">Cancel</a>
        </div>
    </form>
</div>

