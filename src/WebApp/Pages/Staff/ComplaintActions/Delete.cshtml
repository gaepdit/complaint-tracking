@page "{actionId:guid?}"
@using Cts.WebApp.Pages.Shared.DisplayTemplates
@model DeleteActionModel

@{
    ViewData["Title"] = "Delete Complaint Action";
    ViewData["NoAnchors"] = "True";
}

<h1>
    <em>Confirm</em> @ViewData["Title"]
</h1>

<div class="p-3 border rounded-3 bg-dark-subtle text-dark-emphasis">
    <p class="lead text-danger-emphasis font-weight-medium">
        Are you sure you want to delete this Complaint Action?
    </p>

    <div class="container small">
        <p>
            <em>For Complaint ID @Model.ActionItemView.ComplaintId.ToString()</em>
        </p>
        <dl class="row">
            <dt class="col-md-4 col-lg-3">@Html.DisplayNameFor(model => model.ActionItemView.ActionTypeName)</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(model => model.ActionItemView.ActionTypeName)</dd>
            <dt class="col-md-4 col-lg-3">@Html.DisplayNameFor(model => model.ActionItemView.ActionDate)</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(model => model.ActionItemView.ActionDate, DisplayTemplate.DateOnly)</dd>
            <dt class="col-md-4 col-lg-3">@Html.DisplayNameFor(model => model.ActionItemView.Investigator)</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(model => model.ActionItemView.Investigator)</dd>
            <dt class="col-md-4 col-lg-3">@Html.DisplayNameFor(model => model.ActionItemView.Comments)</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(model => model.ActionItemView.Comments, DisplayTemplate.TruncateText)</dd>
        </dl>
    </div>

    <form method="post">
        <div class="mt-3 mb-1">
            <button type="submit" class="btn btn-danger col-5 col-sm-3 col-lg-2 me-2">Delete</button>
            <a asp-page="../Complaints/Details" asp-route-id="@Model.ActionItemView.ComplaintId.ToString()" asp-fragment="@Model.ActionItemId.ToString()" class="btn btn-outline-secondary">Cancel</a>
        </div>
        <input asp-for="ActionItemId" type="hidden" />
    </form>
</div>
