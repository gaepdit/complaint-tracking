@page "{attachmentId:guid?}"
@model AttachmentDeleteModel

@{
    ViewData["Title"] = $"Delete Attachment from Complaint ID {Model.ComplaintId}";
    ViewData["NoAnchors"] = "True";
}

<h1>
    <em>Confirm</em> @ViewData["Title"]
</h1>

<div class="p-3 border rounded-3 bg-dark-subtle text-dark-emphasis">
    <p class="lead text-danger-emphasis font-weight-medium">
        Are you sure you want to delete this attachment? <em>This cannot be undone.</em>
    </p>
    <partial name="_AttachmentSummaryPartial" model="Model.AttachmentView" />
    <form method="post">
        <div class="mt-3 mb-1">
            <button type="submit" class="btn btn-danger col-5 col-sm-3 col-lg-2 me-2">Delete</button>
            <a asp-page="../Details" asp-route-id="@Model.ComplaintId.ToString()" asp-fragment="attachments" class="btn btn-outline-secondary">Cancel</a>
        </div>
        <input asp-for="AttachmentId" type="hidden" />
    </form>
</div>
