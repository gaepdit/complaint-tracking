@page "{id:int?}"
@using Cts.AppServices.Attachments
@using Cts.AppServices.Complaints.Permissions
@using Cts.WebApp.Pages.Shared.DisplayTemplates
@using Cts.WebApp.Pages.Shared.EditorTemplates
@using Cts.WebApp.Platform.Constants
@using GaEpd.AppLibrary.Extensions
@model DetailsModel
@{
    ViewData["Title"] = $"Complaint ID {Model.ComplaintView.Id.ToString()}";
    var alertClass = Model.ComplaintView.ComplaintClosed ? "alert-secondary" : "alert-info";
}

@* TODO: Remove when complaint actions have all been implemented: *@
@* ReSharper disable Mvc.ActionNotResolved *@

<div class="container-full">
    <div class="row justify-content-between align-items-baseline g-0 my-1">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
        @if (Model.ComplaintView.IsPublic)
        {
            <div class="col-auto d-print-none ms-2">
                <a asp-page="/Public/Complaints/Index" asp-route-id="@Model.ComplaintView.Id.ToString()" class="link-offset-2">ðŸ“¢ View public copy</a>
            </div>
        }
    </div>
</div>

@if (Model.ComplaintView.IsDeleted) // implies `ComplaintOperation.ManageDeletions`
{
    <div class="bg-danger-subtle border border-danger-subtle p-2 rounded mb-3">
        <div class="container-full">
            <div class="row justify-content-between align-items-start g-0 my-1">
                <div class="col">
                    <h2 class="text-danger-emphasis">Complaint Has Been Deleted</h2>
                </div>
                <div class="col-auto d-print-none ms-2">
                    <a asp-page="Restore" asp-route-id="@Model.ComplaintView.Id.ToString()" class="btn btn-outline-warning">Restore deleted complaint</a>
                </div>
            </div>
        </div>

        <div class="container">
            <dl class="row">
                <dt class="col-sm-4 col-lg-3">@Html.DisplayNameFor(model => model.ComplaintView.DeletedBy)</dt>
                <dd class="col-sm-8 col-lg-9">
                    @Html.DisplayFor(model => model.ComplaintView.DeletedBy, DisplayTemplate.NameOrNotEntered)
                    on @Html.DisplayFor(model => model.ComplaintView.DeletedAt, DisplayTemplate.LongDateTimeOrNotEntered)
                </dd>
                <dt class="col-sm-4 col-lg-3">@Html.DisplayNameFor(model => model.ComplaintView.DeleteComments)</dt>
                <dd class="col-sm-8 col-lg-9 text-break text-pre-line">@Model.ComplaintView.DeleteComments</dd>
            </dl>
        </div>
    </div>
}

@if (Model.UserCan[ComplaintOperation.ViewAsOwner])
{
    <div class="alert @alertClass" role="alert">
        This Complaint was assigned to you on @Html.DisplayFor(model => model.ComplaintView.CurrentOwnerAssignedDate, DisplayTemplate.LongDateTimeOrNotEntered).
        @if (Model.ComplaintView.CurrentOwnerAcceptedDate != null)
        {
            <br />
            @:You accepted it on @Html.DisplayFor(model => model.ComplaintView.CurrentOwnerAcceptedDate, DisplayTemplate.LongDateTimeOrNotEntered).
        }
    </div>
}

@if (!Model.ComplaintView.IsDeleted)
{
    <div class="d-print-none mb-3">
        @if (Model.UserCan[ComplaintOperation.EditDetails])
        {
            <a asp-page="Edit" asp-route-id="@Model.ComplaintView.Id.ToString()" class="btn btn-outline-primary me-2">Edit details</a>
        }
        @if (Model.UserCan[ComplaintOperation.ManageDeletions])
        {
            <a asp-page="Delete" asp-route-id="@Model.ComplaintView.Id.ToString()" class="btn btn-outline-danger me-2">Delete</a>
        }
    </div>
}

<h2 id="status">Status: <em class="text-brand">@Model.ComplaintView.Status.GetDisplayName()</em></h2>

<div class="d-print-none mb-2">
    @if (Model.UserCan[ComplaintOperation.Accept])
    {
        <form asp-action="Accept">
            <button id="AcceptSubmitButton" type="submit" class="btn btn-primary me-2">Accept</button>
            @Html.HiddenFor(model => model.ComplaintView.Id)
        </form>
    }
    @if (Model.UserCan[ComplaintOperation.Review])
    {
        <a asp-action="Approve" asp-route-id="@Model.ComplaintView.Id.ToString()" class="btn btn-outline-primary me-2">Close Complaint (approved)</a>
        <a asp-action="Return" asp-route-id="@Model.ComplaintView.Id.ToString()" class="btn btn-outline-primary me-2">Return to staff (not approved)</a>
    }
    @if (Model.UserCan[ComplaintOperation.Assign])
    {
        <a asp-action="Assign" asp-route-id="@Model.ComplaintView.Id.ToString()" class="btn btn-outline-primary me-2">Assign</a>
    }
    @if (Model.UserCan[ComplaintOperation.RequestReview])
    {
        <a asp-action="RequestReview" asp-route-id="@Model.ComplaintView.Id.ToString()" class="btn btn-outline-primary me-2">Submit for review</a>
    }
    @if (Model.UserCan[ComplaintOperation.Reassign])
    {
        <a asp-action="Assign" asp-route-id="@Model.ComplaintView.Id.ToString()" class="btn btn-outline-primary me-2">Transfer/reassign</a>
    }
    @if (Model.UserCan[ComplaintOperation.Reopen])
    {
        <a asp-action="Reopen" asp-route-id="@Model.ComplaintView.Id.ToString()" class="btn btn-outline-primary me-2">Reopen</a>
    }
</div>

