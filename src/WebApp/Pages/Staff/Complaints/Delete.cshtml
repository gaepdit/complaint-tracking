@page "{id:int?}"
@using Cts.WebApp.Pages.Shared.EditorTemplates
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DeleteModel

@{
    ViewData["Title"] = $"Delete Complaint ID {Model.ComplaintClosure.ComplaintId}";
    ViewData["NoAnchors"] = "True";
}

<h1>
    <em>Confirm</em> @ViewData["Title"]
</h1>

<div class="p-3 border rounded-3 bg-dark-subtle text-dark-emphasis">
    <p class="lead text-danger-emphasis font-weight-medium">
        Are you sure you want to delete this Complaint?
    </p>

    <partial name="Shared/_ComplaintSummaryPartial" model="Model.ComplaintView" />

    <form method="post">
        <div class="mb-3">
            @Html.EditorFor(e => e.ComplaintClosure.Comment, EditorTemplate.Textarea, new { Rows = 3 })
        </div>
        <div class="mt-3 mb-1">
            <button type="submit" class="btn btn-danger col-5 col-sm-3 col-lg-2 me-2">Delete</button>
            <a asp-page="Details" asp-route-id="@Model.ComplaintClosure.ComplaintId.ToString()" class="btn btn-outline-secondary">Cancel</a>
        </div>
        <input asp-for="ComplaintClosure.ComplaintId" type="hidden" />
    </form>
</div>
