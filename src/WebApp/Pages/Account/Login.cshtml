@page
@model LoginModel
@{
    ViewData["Title"] = "Agency Login";
}

<h1>@ViewData["Title"]</h1>
<p>
    The Complaint Tracking System administration site is a State of Georgia application.
    It is intended for conducting official State business and is available for use by
    State of Georgia employees only.
</p>

<div class="p-5 bg-light-subtle border rounded-3 mt-5 mb-5">
    <h1 class="display-4">Sign in using your work account</h1>

    <form id="external-account" asp-page="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="All" class="alert alert-danger d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-triangle-fill me-2" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2"/>
            </svg>
        </div>
        <button type="submit" class="btn btn-lg btn-outline-primary btn-img my-3 py-3 px-4" title="Sign in using your work account">
            <img src="~/images/ms-symbol.svg" alt="" /> Sign in
        </button>
    </form>
</div>
